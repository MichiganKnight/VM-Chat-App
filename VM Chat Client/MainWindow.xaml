 ﻿<Window x:Class="VM_Chat_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chat Client" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Name="ChatBox" HorizontalAlignment="Stretch" Margin="10" />
        <TextBox Grid.Row="1" Name="MessageBox" HorizontalAlignment="Stretch" Margin="10" />
        <Button Grid.Row="2" Content="Send" HorizontalAlignment="Left" Width="70" Cursor="Hand" Margin="10" Click="SendButton_Click" />
    </Grid>
</Window>